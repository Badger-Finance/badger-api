{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es2018",
    "lib": [
      "es2019",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "build"
  },
  "compileOnSave": true,
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./node_modules/ethers-typescript-typings/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
